<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>utf8</charset>
            <pattern>[%d{HH:mm:ss}|%-5level|%-22t|%-35logger{0}]%msg%n</pattern>
        </encoder>
    </appender>

    <appender name="CONSOLE_TO_FILE" class="ru.pb.global.logging.LogToZipAppender">
        <param name="backupDir" value="logs/backup"/>
        <param name="backupDateFormat" value="yyyy-MM-dd HH-mm-ss"/>
        <param name="file" value="logs/console.log"/>
        <encoder>
            <charset>utf-8</charset>
            <pattern>[%d{HH:mm:ss}|%-5level|%-25t|%-47logger] %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="ERROR_TO_FILE" class="ru.pb.global.logging.LogToZipAppender">
        <param name="backupDir" value="logs/backup"/>
        <param name="backupDateFormat" value="yyyy-MM-dd HH-mm-ss"/>
        <param name="file" value="logs/errors.log"/>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <charset>utf-8</charset>
            <pattern>[%d{HH:mm:ss}|%-5level|%-22t|%-47logger] %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="UNK_PACKETS_TO_FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/unknown_packets.log</file>
        <append>true</append>
        <encoder>
            <Pattern>%message%n</Pattern>
        </encoder>
    </appender>

    <logger name="ru.pb.core.network.packets.PacketHandler" level="WARN" additivity="true">
        <appender-ref ref="UNK_PACKETS_TO_FILE"/>
    </logger>

    <appender name="DATABASE_DEBUG_TO_FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/database_debug.log</file>
        <append>true</append>
        <encoder>
            <Pattern>%message%n</Pattern>
        </encoder>
    </appender>

    <logger name="ru.pb.global.dao.jdbc.DatabaseUtils" level="DEBUG" additivity="true">
        <appender-ref ref="DATABASE_DEBUG_TO_FILE"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="CONSOLE_TO_FILE"/>
        <appender-ref ref="ERROR_TO_FILE"/>
    </root>

</configuration>