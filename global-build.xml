<?xml version="1.0" encoding="UTF-8"?>
<project name="[1]PB_GLOBAL_LIBRARY" default="dist" basedir=".">
	<description>PB Global Library</description>
	<property name="root" location="pb-global"/>
	<property name="src" location="${root}/src"/>
	<property name="libs" location="libs"/>
	<property name="svnlibs" location="libs-svn"/>
	<property name="authlibs" location="dist/pb_auth/libs"/>
	<property name="gamelibs" location="dist/pb_game/libs"/>
	<property name="battlelibs" location="dist/pb_battle/libs"/>
	<property name="build" location="${root}/build"/>
	<property name="build.classes" location="${build}/classes"/>

	<path id="classpath">
		<fileset dir="${libs}">
			<include name="*.jar"/>
			<exclude name="pb-global.jar"/>
		</fileset>
	</path>

	<target name="clean" description="Remove old library.">
		<delete dir="${build}"/>
		<delete file="${libs}/pb-global.jar"/>
		<delete file="${authlibs}/pb-global.jar"/>
		<delete file="${gamelibs}/pb-global.jar"/>
		<delete file="${battlelibs}/pb-global.jar"/>
	</target>

	<target name="dirs" depends="clean" description="Create Dirs.">
		<mkdir dir="${build}"/>
		<mkdir dir="${build.classes}"/>
	</target>

	<target name="compile" depends="dirs" description="Compile the source." >
		<javac includeantruntime="false" destdir="${build.classes}" optimize="off" debug="on" source="1.8" target="1.8" encoding="UTF-8" nowarn="off">
			<compilerarg value="-Xlint:all"></compilerarg>
			<src path="${src}"/>
			<classpath refid="classpath"/>
		</javac>

		<tstamp>
			<format property="build.tstamp" pattern="yyyy.MM.dd HH:mm"/>
		</tstamp>
		
		<exec dir="${svnlibs}" executable="${svnlibs}/svnversion" outputproperty="global.revision" failifexecutionfails="true">
			<arg line="-n ${src}"/>
		</exec>

		<echo message="Subversion revision: ${global.revision}"/>

		<concat destfile="${build}/classes/ru/pb/global/info/build-info.ini">version=${global.revision}
builddate=${build.tstamp}: ${user.name}/${os.name}</concat>
	
		<jar destfile="${build}/pb-global.jar" description="Add classes in JAR." level="9">
			<fileset dir="${build.classes}"/>
			<manifest>
				<attribute name="Implementation-Revision" value="${global.revision}"/>
			</manifest>
		</jar>		
	</target>
	
	<target name="dist" depends="compile" description="Create Dirs.">
		<copy todir="${libs}">
			<fileset dir="${build}">
				<include name="pb-global.jar"/>
			</fileset>
		</copy>
		
		<copy todir="${authlibs}">
			<fileset dir="${build}">
				<include name="pb-global.jar"/>
			</fileset>
		</copy>
		
		<copy todir="${gamelibs}">
			<fileset dir="${build}">
				<include name="pb-global.jar"/>
			</fileset>
		</copy>
		<copy todir="${battlelibs}">
			<fileset dir="${build}">
				<include name="pb-global.jar"/>
			</fileset>
		</copy>
	</target>
</project>